<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tututu.qa.repository.RouterRepository">

    <resultMap id="BaseResultMap" type="com.tututu.qa.domain.Router">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="path" jdbcType="VARCHAR" property="path"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, path,create_time, update_time
    </sql>

    <insert id="insert" parameterType="com.tututu.qa.repository.RouterRepository">
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Long">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into item (name, path)
        values (#{name,jdbcType=VARCHAR}, #{path,jdbcType=VARCHAR})
    </insert>

    <select id="getRouterByPage" parameterType="com.tututu.qa.domain.PaginationBase" resultMap="BaseResultMap" >
        SELECT <include refid="Base_Column_List" />
        FROM router
    </select>

    <select id="queryByName" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM router
        <where>
            name like CONCAT('%',#{name},'%')
        </where>
        ORDER BY update_time DESC
    </select>

</mapper>